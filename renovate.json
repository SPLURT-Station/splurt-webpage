{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergeMinor",
    ":automergePatch",
    "schedule:weekends",
    "group:allNonMajor"
  ],
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "pin",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "Astro",
      "matchPackageNames": [
        "/^astro/",
        "/^@astrojs//"
      ]
    },
    {
      "groupName": "Solid.js",
      "matchPackageNames": [
        "/^solid-js/",
        "/^@solidjs//"
      ]
    },
    {
      "groupName": "Tailwind CSS",
      "matchPackageNames": [
        "/tailwind/",
        "/postcss/",
        "/autoprefixer/"
      ]
    },
    {
      "groupName": "Linting & Formatting",
      "matchPackageNames": [
        "/biome/",
        "/ultracite/",
        "/typescript/"
      ]
    },
    {
      "groupName": "Testing",
      "matchPackageNames": [
        "/vitest/",
        "/playwright/",
        "/@playwright//"
      ]
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "dependencies",
        "major"
      ]
    }
  ]
}

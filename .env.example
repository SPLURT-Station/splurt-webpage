# Media Gallery Configuration
# ===========================
# Configure separate sources for splashscreens and screenshots
# Each can use either a URL (web directory listing) or a local folder

# ============================================
# Splashscreen Source Configuration
# ============================================

# Source type: "url" for web directory listing, "folder" for local folder
PUBLIC_MEDIA_SPLASH_SOURCE_TYPE=url

# If using URL source, specify the base URL (e.g., https://splurt.space/rsc/images/)
PUBLIC_MEDIA_SPLASH_BASE_URL=https://splurt.space/rsc/images/

# If using folder source, specify the local folder path (relative to project root)
# MEDIA_SPLASH_LOCAL_FOLDER_PATH=./public/splashscreens

# File patterns to match (comma-separated, supports wildcards: *, ?)
# Examples: "*splashscreen*", "*splash*", "*.png", "splash_*.jpg"
PUBLIC_MEDIA_SPLASH_PATTERNS=*.png,*.jpg,*.jpeg

# ============================================
# Screenshot Source Configuration
# ============================================

# Source type: "url" for web directory listing, "folder" for local folder
PUBLIC_MEDIA_SCREENSHOT_SOURCE_TYPE=url

# If using URL source, specify the base URL (e.g., https://splurt.space/rsc/images/)
PUBLIC_MEDIA_SCREENSHOT_BASE_URL=https://splurt.space/rsc/images/

# If using folder source, specify the local folder path (relative to project root)
# MEDIA_SCREENSHOT_LOCAL_FOLDER_PATH=./public/screenshots

# File patterns to match (comma-separated, supports wildcards: *, ?)
# Examples: "*.png", "*.jpg", "screenshot_*", "ingame_*.png"
PUBLIC_MEDIA_SCREENSHOT_PATTERNS=*.png,*.jpg,*.jpeg

# ============================================
# Legacy Single-Source Configuration (Fallback)
# ============================================
# These are used as fallback if separate source configs are not provided
# For new setups, use the separate source configs above

# PUBLIC_MEDIA_SOURCE_TYPE=url
# PUBLIC_MEDIA_BASE_URL=https://splurt.space/rsc/images/
# MEDIA_LOCAL_FOLDER_PATH=./public/images

# ============================================
# General Configuration
# ============================================

# Maximum number of images to fetch per category (splashscreens and screenshots)
# Set to 0 or leave empty for no limit
PUBLIC_MEDIA_MAX_IMAGES_PER_CATEGORY=50

# Cache duration in seconds (for server-side caching, if implemented)
# Default: 3600 (1 hour)
MEDIA_CACHE_DURATION=3600

# ============================================
# Example Configurations
# ============================================

# Example 1: Both from same URL source with different patterns
# PUBLIC_MEDIA_SPLASH_SOURCE_TYPE=url
# PUBLIC_MEDIA_SPLASH_BASE_URL=https://splurt.space/rsc/images/
# PUBLIC_MEDIA_SPLASH_PATTERNS=*splashscreen*,*splash*
# PUBLIC_MEDIA_SCREENSHOT_SOURCE_TYPE=url
# PUBLIC_MEDIA_SCREENSHOT_BASE_URL=https://splurt.space/rsc/images/
# PUBLIC_MEDIA_SCREENSHOT_PATTERNS=*.png,*.jpg

# Example 2: Splashscreens from URL, screenshots from local folder
# PUBLIC_MEDIA_SPLASH_SOURCE_TYPE=url
# PUBLIC_MEDIA_SPLASH_BASE_URL=https://splurt.space/rsc/splashscreens/
# PUBLIC_MEDIA_SPLASH_PATTERNS=*.png
# PUBLIC_MEDIA_SCREENSHOT_SOURCE_TYPE=folder
# MEDIA_SCREENSHOT_LOCAL_FOLDER_PATH=./public/screenshots
# PUBLIC_MEDIA_SCREENSHOT_PATTERNS=*.jpg,*.png

# Example 3: Both from local folders
# PUBLIC_MEDIA_SPLASH_SOURCE_TYPE=folder
# MEDIA_SPLASH_LOCAL_FOLDER_PATH=./public/splashscreens
# PUBLIC_MEDIA_SPLASH_PATTERNS=*.png
# PUBLIC_MEDIA_SCREENSHOT_SOURCE_TYPE=folder
# MEDIA_SCREENSHOT_LOCAL_FOLDER_PATH=./public/screenshots
# PUBLIC_MEDIA_SCREENSHOT_PATTERNS=*.jpg,*.png

---
import { Image } from "astro:assets";
import logo from "../assets/logos/splurtpaw2_alt3.png";
import GithubIcon from "../assets/svg/github-svgrepo-com.svg";
import "../styles/footer.css";
---

<footer class="site-footer mt-auto">
	<div class="max-w-7xl mx-auto px-4 py-6 text-center text-neutral-50 text-sm">
		<Image
			src={logo}
			alt="S.P.L.U.R.T. Station Logo"
			class="w-20 mx-auto mb-4"
			width={80}
			height={80}
		/>
		<p class="flex items-center justify-center">
			Copyright
			<span class="mx-2">Â©</span>
			{new Date().getFullYear()}S.P.L.U.R.T. Station
		</p>
		<p class="flex items-center justify-center mt-2">
			Source available on
			<a
				class="inline-flex items-center ml-1 text-primary hover:text-[#ff80d0] transition-colors"
				href="https://github.com/SPLURT-Station/splurt-webpage"
				rel="external"
				target="_blank"
			>
				<GithubIcon
					class="w-4 h-4 mx-1"
					width={16}
					height={16}
					fill="currentColor"
					aria-hidden="true"
				/>
				GitHub
			</a>
		</p>
	</div>
</footer>

---
import { Image } from "astro:assets";
import logo from "../assets/logos/splurtlogo.png";
import DiscordIcon from "../assets/svg/discord-icon-svgrepo-com.svg";
import "../styles/hero-header.css";
---

<header class="intro">
	<div class="relative z-30">
		<Image
			src={logo}
			alt="S.P.L.U.R.T. Station"
			class="logo max-w-full p-4"
			width={550}
			height={273}
			loading="eager"
		/>
		<div
			class="text-center mt-8 mx-4 flex flex-col sm:flex-row gap-4 justify-center items-center"
		>
			<a href="/how-to-play" class="cta cta--highlighted">Play Now</a>
			<a
				href="https://discord.gg/splurt"
				class="cta cta--discord"
				target="_blank"
				rel="noopener external"
			>
				Discord
				<DiscordIcon
					class="discord-icon"
					width={20}
					height={20}
					fill="currentColor"
					aria-hidden="true"
				/>
			</a>
		</div>
	</div>

---
import { getImage } from "astro:assets";
import banner from "../assets/backgrounds/banner.png";
import MediaTabs from "../components/media-tabs";
import Layout from "../layouts/main-layout.astro";
import "../styles/media.css";

// Optimize the banner image for background use
const optimizedBanner = await getImage({
	src: banner,
	width: 1920,
	height: 1080,
	format: "webp",
	quality: 80,
});

// These would be replaced with actual image paths when available
// For now, using placeholder structure
const splashScreens = [
	{ id: 1, alt: "Splashscreen 1" },
	{ id: 2, alt: "Splashscreen 2" },
	{ id: 3, alt: "Splashscreen 3" },
	{ id: 4, alt: "Splashscreen 4" },
	{ id: 5, alt: "Splashscreen 5" },
	{ id: 6, alt: "Splashscreen 6" },
];

const inGameScreenshots = [
	{ id: 1, alt: "In-game screenshot 1" },
	{ id: 2, alt: "In-game screenshot 2" },
	{ id: 3, alt: "In-game screenshot 3" },
	{ id: 4, alt: "In-game screenshot 4" },
	{ id: 5, alt: "In-game screenshot 5" },
	{ id: 6, alt: "In-game screenshot 6" },
	{ id: 7, alt: "In-game screenshot 7" },
	{ id: 8, alt: "In-game screenshot 8" },
];
---

<Layout
	title="Media - S.P.L.U.R.T. Station"
	description="View splashscreens and in-game screenshots from S.P.L.U.R.T. Station."
>
	<div
		class="fixed inset-0 -z-10"
		style={`background-image: url(${optimizedBanner.src}); background-size: cover; background-position: center; background-repeat: no-repeat;`}
		aria-hidden="true"
	></div>
	<div
		class="fixed inset-0 -z-10 bg-black/60 backdrop-blur-sm"
		aria-hidden="true"
	></div>
	<div class="container mx-auto px-4 py-12 lg:py-16 xl:py-24 relative z-10">
		<div class="card">
			<h2 class="content-heading content-heading--primary-dark mb-6">
				Media Gallery
			</h2>
			<MediaTabs
				client:load
				splashScreens={splashScreens}
				inGameScreenshots={inGameScreenshots}
			/>
		</div>
	</div>
</Layout>

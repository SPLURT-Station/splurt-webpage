{
  "version": "0.0.1",
  "unstable": ["fmt-component"],
  "compilerOptions": {
    "checkJs": true
  },
  "tasks": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "launch": "deno run --allow-net --allow-read --allow-env ./dist/server/entry.mjs",
    "fmt:check": "deno fmt --check"
  },
  "fmt": {
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "nodeModulesDir": "auto",
  "lock": {
    "path": "./deno.lock",
    "frozen": false
  }
}
